<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/cart.css">
    <title>Document</title>
</head>
<body>
    <%-include("./partials/header.ejs")%>
    <div class="container">
        <header class="cartheader">
            <h1>My Bag</h1>
        </header>
    </div>
    <div class="cart-wrapper">
        <div class="cart-wrapper__inner">
            <div class="insidewrapper">
                <div class="container c_cart">
                    <div class="card">
                        <div class="table-wrapper">
                            <table>
                                <thead class="hidden-phone">
                                    <tr>
                                        <th>ITEM</th>
                                        <th class="table_center">QTY</th>
                                        <th class="table_right">SUBTOTAL</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product => {%>
                                    <tr>
                                        <td class="td_upper">
                                            <div class="prodductinfo">
                                                <div class="item_image">
                                                    <div class="imgcont">
                                                        <img src="/images/panadol-advance-24-tablets-285579_1024x.webp" alt="">
                                                    </div>
                                                </div>
                                                <div class="item_title">
                                                    <a href="" class="inner_title"><%=product.item_title%></a>
                                                    <div class="item_price">
                                                        <span class="prices"><%=product.item_price%></span>
                                                    </div>
                                                    <div class="line-item hidden-table">
                                                        <div class="quantity_range">
                                                            <button type="button"  onclick="decrement()" class="quan_button">
                                                                <i class="fa-solid fa-minus"></i>
                                                            </button>
                                                            <input type="text" class="quantityvalue"  value="<%=product.quantity%>">
                                                            <button type="button"  onclick="increment()" class="quan_button">
                                                                <i class="fa-solid fa-plus"></i>
                                                            </button>
                                                        </div>
                                                        <a href="" class="quantity_remove">Remove</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="td_center hidden-phone">
                                            <div class="Qty_div">
                                                <div class="quantity_range">
                                                    <button type="button"  onclick="decrement()" class="quan_button">
                                                        <i class="fa-solid fa-minus"></i>
                                                    </button>
                                                    <input type="text" class="quantityvalue"  value="<%=product.quantity%>">
                                                    <button type="button"  onclick="increment()" class="quan_button">
                                                        <i class="fa-solid fa-plus"></i>
                                                    </button>
                                                </div>
                                                <a href="" class="delete">
                                                    <i class='bx bx-trash'></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                        <td class="td_right hidden-phone">
                                            <span>EGP  <%= product.item_price * product.quantity.toFixed(2) %></span>
                                        </td>
                                    </tr>
                                    <%})%>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <form action="/cart" class="cart-recap">
                        <div class="cart_scroller">
                            <div class="card">
                                <div class="card__Section">
                                    <div class="upperpart">
                                        <div class="innerpart">
                                            <div class="coupon">
                                                <input type="text" placeholder="Coupon Code">
                                                <div class="buttoninput">
                                                    <div class="inputbtn">Apply</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="innerpart">
                                            <div class="subtotal">
                                                <span class="toleft">Subtotal</span>
                                                <span class="toright">EGP 52.50</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="notices"><p>Taxes and shipping calculated at checkout</p></div>
                                    <button type="submit" class="butn">SECURE CHECKOUT</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
            
        </div>
    </div>
    <script>
        function increment() {
            const quantityInputs = document.getElementsByClassName('quantityvalue');
            
            // Loop through each element with the class name 'quantityvalue'
            for (let i = 0; i < quantityInputs.length; i++) {
                let currentValue = parseInt(quantityInputs[i].value, 10);
                
                if (!isNaN(currentValue)) {
                    currentValue++;
                    quantityInputs[i].value = currentValue;
                }
            }
        }
        
        function decrement() {
            const quantityInputs = document.getElementsByClassName('quantityvalue');
            
            // Loop through each element with the class name 'quantityvalue'
            for (let i = 0; i < quantityInputs.length; i++) {
                let currentValue = parseInt(quantityInputs[i].value, 10);
                
                if (!isNaN(currentValue) && currentValue > 1) {
                    currentValue--;
                    quantityInputs[i].value = currentValue;
                }
            }
        }
        </script>
        
</body>
</html>