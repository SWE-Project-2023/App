<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/wishlist.css">
  <title>Wishlist</title>
</head>
<body>
    <%-include("./partials/header.ejs")%>
    <div class="wishlist">
    <%products.forEach(product=>{%>
      <div class="wishlist-item">
        <% const images = product.image_paths ?
        product.image_paths.split(',') : []; %> <% if
        (images.length > 0) { %>
        <img src="/images/<%= images[0] %>" alt="<%= images[0] %>"  class="wishlist-image">
        <% } else { %>
          <img src ="/images/default_image.jpg" alt="default image"  class="wishlist-image">
        <% } %>
        <div class="wishlist-details">
          <div class="item-name"><%=product.item_title%></div>
          <div class="item-price">EGY <%=product.item_price%></div>
          <div class="item-description"><%=product.item_details%></div>
        </div>
        <div>
            <button class="remove-button" data-product-id="<%=product.item_id%>"><i class="fas fa-trash"></i> Remove</button>
            <button class="quick-view-button" onclick="quickView(this)"><i class="fas fa-search"></i> Quick View</button>
          </div>
      </div>
    <%})%>
      
  <!-- Add more wishlist items as needed -->
  <%-include("./partials/footer.ejs")%>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="/js/wishlist.js"></script>

</body>
</html>